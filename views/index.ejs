    <!-- TITLE container -->
    <div class="ui inverted vertical masthead center aligned segment">
      <div class="ui text container" style = "margin-bottom: 2em">
        <h1 class="ui inverted header">ROUND UP</h1>
        <h2>Round up your mates!</h2>
        <button class="ui huge primary button" id="create-event-start" type="submit">Create Event!</button>
        <br>
          <!-- <i class = "down arrow icon large"></i> -->
      </div>
    </div>

    <!-- Creator information Form -->
    <div class = "create-event-body ui text container" id="name-email-body">

      <h1>Your Information</h1>
      <form method="POST" action="/">
        <h2>Enter your name</h2>
        <div class="ui input"> <input id="name-field" type="text" placeholder="Name..."> </div>
        <h2>Enter your email address</h2>
        <div class="ui input"> <input id="email-field" type="text" placeholder="Email...">  </div>
        <div class="ui hidden divider"> </div>
        <button type = "submit" class="ui primary button" id="name-email-next">Save</button>
      </form>
    </div>
    <script>$('#name-email-body').slideUp(0)</script>

    <!-- Event information Form -->
    <div class = "create-event-body ui text container" id="event-description-body">
      <h1>Event Details</h1>
      <form method="POST" action="/">
        <h2>Enter a Name for Your Event</h2>
        <div class="ui input"> <input id="event-name" type="text" placeholder="Event Name..."> </div>
        <h2>Enter a description for your event</h2>
        <div class="ui input"> <input id="event-description" type="text" placeholder="Description..."> </div>
        <h2>Enter your event location</h2>
        <div class="ui input"> <input id="event-location" type="text" placeholder="Location..."> </div>
        <div class="ui hidden divider"></div>
        <button type = "submit" class="ui primary button" id="description-location-next">Save</button>
      </form>
    </div>
    <script>$('#event-description-body').slideUp(0)</script>
    <!-- Event Availability Creation Form -->
    <div class = "create-event-body ui text container" id="proposal-times-body">
      <h1>Possible Event Times</h1>
      <form method="POST" action="/">

        <div class="ui calendar" id="standard_calendar">
          <div class="ui input left icon">
            <i class="calendar icon"></i>
            <input type="text" placeholder="Date" id="proposal-calendar">
          </div>
        </div>
        <button type = "submit" class="ui primary button" id="proposal-sav-button">Save</button>
      </form>
    </div>
    <script>$('#proposal-times-body').slideUp(0)</script>
    <script>
      $('#standard_calendar')
        .calendar()
      ;
    </script>

